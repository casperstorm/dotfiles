# move window
shift + cmd - a : yabai -m window --warp west
shift + cmd - s : yabai -m window --warp south
shift + cmd - w : yabai -m window --warp north
shift + cmd - d : yabai -m window --warp east

# focus window
shift + alt - a : yabai -m window --focus west
shift + alt - s : yabai -m window --focus south
shift + alt - w : yabai -m window --focus north
shift + alt - d : yabai -m window --focus east

# fast focus desktop
shift + cmd - x : yabai -m space --focus recent
shift + cmd - z : yabai -m space --focus prev
shift + cmd - c : yabai -m space --focus next
shift + cmd - 1 : yabai -m space --focus 1
shift + cmd - 2 : yabai -m space --focus 2
shift + cmd - 3 : yabai -m space --focus 3
shift + cmd - 4 : yabai -m space --focus 4
shift + cmd - 5 : yabai -m space --focus 5
shift + cmd - 6 : yabai -m space --focus 6
shift + cmd - 7 : yabai -m space --focus 7
shift + cmd - 8 : yabai -m space --focus 8
shift + cmd - 9 : yabai -m space --focus 9
shift + cmd - 0 : yabai -m space --focus 10

# toggle window split type
alt - e : yabai -m window --toggle split

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# change layout of desktop
ctrl + alt - a : yabai -m space --layout bsp
ctrl + alt - d : yabai -m space --layout float          