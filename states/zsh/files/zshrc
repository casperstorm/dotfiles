# Autocompletion
if type brew &>/dev/null; then
  FPATH=$(brew --prefix)/share/zsh/site-functions:$FPATH
fi

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

# theme
ZSH_THEME="spaceship"

# spaceship promt
SPACESHIP_PACKAGE_SHOW=false
SPACESHIP_CHAR_SUFFIX=" "

# Plugins
plugins=(fzf git z colorize brew)
source $ZSH/oh-my-zsh.sh

# User
export LANG="en_US.UTF-8"

# asdf
export ASDF_CONFIG_FILE="~/.config/asdf/.asdfrc"
. $HOME/.asdf/asdf.sh
. $HOME/.asdf/completions/asdf.bash

# TMUX
export TMUX_CONFIG="~/.config/tmux/.tmux.conf"
alias tm="tmux -f $TMUX_CONFIG -u attach || tmux -f $TMUX_CONFIG -u new"

# Enabled true color support for terminals
export NVIM_TUI_ENABLE_TRUE_COLOR=1

# Alias
alias l='ls -lAFh'    #long list,show almost all,show type,human readable
alias ll='l'
alias vim='nvim'
alias gps='gh pr status'
alias gpv='gh pr view'
alias gis='gh issue status'
alias giv='gh issue view'

# Set default editor to nvim
export EDITOR='nvim'

# Setting rg as the default source for fzf
export FZF_DEFAULT_COMMAND='rg --files'

# fcb [FUZZY PATTERN] - Checkout specified branch
# Include remote branches, sorted by most recent commit and limited to 30
fcb() {
  local branches branch
  branches=$(git for-each-ref --count=30 --sort=-committerdate refs/heads/ --format="%(refname:short)") &&
  branch=$(echo "$branches" |
           fzf-tmux -d $(( 2 + $(wc -l <<< "$branches") )) +m) &&
  git checkout $(echo "$branch" | sed "s/.* //" | sed "s#remotes/[^/]*/##")
}

# A zettelkasten command to quickly commit changes to git
zkc() {
  cd ~/Source/Private/zettelkasten
  git commit -am "chore: updated zettelkasten"
  cd -
}

# ZFZ Fuzzy search
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# zsh completions
fpath=(/usr/local/share/zsh-completions $fpath)

# zsh autosuggestions
source /usr/local/share/zsh-autosuggestions/zsh-autosuggestions.zsh
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=#4d5966'

# zsh highlightning
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
export ZSH_HIGHLIGHT_HIGHLIGHTERS_DIR=/usr/local/share/zsh-syntax-highlighting/highlighters
